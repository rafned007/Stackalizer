@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@using System;

<root>

    <div class="titles">@("Level: ")
        <p class="spacing"> @Player.turn </p>
    </div>

    <div class="percent">
        <p class="spacing"> @percent </p>
        <p class="spacing"> % </p>
    </div>
    
    <div class="speed"> @("Speed: ")
        <p class="spacing">@speed </p>
        <p class="spacing"> u/s </p>
    </div>

</root>

@code
{
	[Property] Mover Player {get; set;}
    public float speed {get; set;}
    public float percent {get; set;}

    protected override void OnUpdate()
	{
		base.OnUpdate(); 
        percent = (float)Math.Round((1/Player.TimetillMove) * 20);
        speed = (float)Math.Round((1/Player.TimetillMove)*10)/10;
	}
	protected override int BuildHash()
    {
        return System.HashCode.Combine( Player.turn , speed, percent, Player.TimetillMove );
    }
}