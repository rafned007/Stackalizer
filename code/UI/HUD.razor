@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@using System;

<root>

    <div class="titles">@("Level: ")
        <p class="spacing"> @Player.turn </p>
    </div>

    <div class="vitals">@("Speed: ")
        <p class="spacing"> @speed@("%") </p>
    </div>

</root>

@code
{
	[Property] Mover Player {get; set;}
    public float speed {get; set;}

    protected override void OnUpdate()
	{
		base.OnUpdate(); 
        speed = (float)Math.Round((1/Player.TimetillMove) * 20);
	}
	protected override int BuildHash()
    {
        return System.HashCode.Combine( Player.turn , speed, Player.TimetillMove );
    }
}